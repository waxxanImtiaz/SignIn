<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#efefef"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Tuesday, 7 May 2016"
            android:textSize="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/tv_date" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/ll_image_capture">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="Hello"
            android:layout_marginTop="24dp" />
        <Button
            android:id="@+id/btn_image_capture"
            android:text="Capture Image"
            android:textColor="#fff"
            android:textSize="21dp"
            android:fontFamily="sans-serif-condensed"
            android:textAllCaps="false"
            android:background="@drawable/btn_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp" />

        </LinearLayout>
        <!--<ImageButton-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/imageView"-->
            <!--android:layout_marginTop="24dp"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:src="@drawable/cat"-->
            <!--android:id="@+id/circleView"-->
            <!--/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/ll_signature_capture">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/iv_sign_capture"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:contentDescription="Hello"
                android:layout_marginTop="24dp" />
            <Button
                android:id="@+id/btn_signature_capture"
                android:text="Capture Signature"
                android:textColor="#fff"
                android:textSize="21dp"
                android:fontFamily="sans-serif-condensed"
                android:textAllCaps="false"
                android:background="@drawable/btn_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp" />

        </LinearLayout>
        <EditText
            android:id="@+id/et_firstname"
            android:hint="First Name"
            android:ems="10"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/contact_edittext_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/et_lastname"
            android:hint="Last Name"
            android:ems="10"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/contact_edittext_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/et_company"
            android:hint="Company"
            android:ems="10"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/contact_edittext_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/et_address"
            android:hint="Address"
            android:ems="10"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/contact_edittext_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/et_city"
            android:hint="City"
            android:ems="10"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/contact_edittext_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/et_state"
            android:hint="State"
            android:ems="10"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/contact_edittext_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/et_zipcode"
            android:hint="Zip Code"
            android:ems="10"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/contact_edittext_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/et_phone"
            android:hint="Phone"
            android:ems="10"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/contact_edittext_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"/>


        <EditText
            android:id="@+id/et_email"
            android:hint="Email"
            android:ems="10"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/contact_edittext_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"/>


        <EditText
            android:id="@+id/et_here_to_see"
            android:hint="Here To See"
            android:ems="10"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/contact_edittext_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/et_guide_escort_name"
            android:hint="Guide/Escort Name"
            android:ems="10"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/contact_edittext_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/et_badge_returned"
            android:hint="Badge Returned"
            android:ems="10"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/contact_edittext_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/et_badge_number"
            android:hint="Badge Number"
            android:ems="10"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/contact_edittext_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/et_vehicle_make_model"
            android:hint="Vehicle Make/Model"
            android:ems="10"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/contact_edittext_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/et_vehicle_color"
            android:hint="Vehicle Color"
            android:ems="10"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/contact_edittext_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/et_comments"
            android:hint="Comments"
            android:ems="10"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/contact_edittext_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/et_vehicle_lisence_plate"
            android:hint="Vehicle Lisence Plate"
            android:ems="10"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/contact_edittext_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/ll_visitor_agreement"
            >
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cb_visitor_agreement"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Are you agree?"
                android:textSize="20dp"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btn_signin"
            android:text="Sign In"
            android:textColor="#fff"
            android:textSize="21dp"
            android:fontFamily="sans-serif-condensed"
            android:textAllCaps="false"
            android:background="@drawable/btn_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp" />

    </LinearLayout>
</ScrollView>