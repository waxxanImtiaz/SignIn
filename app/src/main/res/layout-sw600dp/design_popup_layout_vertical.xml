<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/design_style"
        android:paddingRight="136dp"
        android:paddingLeft="137dp"
        android:id="@+id/tv_design_head"
        android:text="@string/design"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/font_sub_menu_heading_layout_design"
        style="@style/inner_heading_style"
        android:background="@drawable/title_border"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chevron_left"
            android:id="@+id/font_chroven_left_design"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Design"
            android:layout_toRightOf="@+id/font_chroven_left_design"
            android:textColor="#6666FF"
            android:layout_marginTop="7dp"
            android:id="@+id/font_heading_left_design"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Font"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="25dp"
            android:paddingLeft="46dp"
            android:paddingRight="45dp"
            android:textColor="#000"
            android:id="@+id/font_heading_center"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isScrollContainer="true"
        android:id="@+id/dropDownChangerOne">

        <ScrollView
            android:id="@+id/top_drop_down_scroller"
            android:layout_marginTop="64dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/popup_two"
            android:fadingEdgeLength="0dip"
            android:scrollbars="none">
            <LinearLayout
                android:id="@+id/top_drop_down_layout"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            </LinearLayout>
        </ScrollView >
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isScrollContainer="true"
        android:id="@+id/dropDownChangerTwo">

        <ScrollView
            android:id="@+id/inner_drop_down_scroller"
            android:layout_width="wrap_content"
            android:layout_marginTop="64dip"
            android:layout_height="wrap_content"
            android:background="@drawable/popup_two"
            android:fadingEdgeLength="0dip"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/inner_drop_down_layout"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            </LinearLayout>

        </ScrollView >

    </RelativeLayout>

    <ImageView
        android:id="@+id/arrow_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dip"
        android:src="@drawable/up_arrow" />
    <ImageView
        android:id="@+id/arrow_down_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-4dip"
        android:src="@drawable/arrow_down" />
    <!-- arrow top margin actual = -2 -->
</RelativeLayout>