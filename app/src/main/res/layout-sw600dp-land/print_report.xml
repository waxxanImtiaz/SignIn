<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_report_heading"
        android:text="OnPremises"
        android:textSize="30dp"
        android:textAlignment="center"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ll_data"
        android:orientation="vertical"
        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:shrinkColumns="*"
            android:layout_margin="4dp"
            style="@style/setup_menu_table"
            android:id="@+id/tl_setup_menu"

            android:stretchColumns="*"
            android:background="#ffffff">

            <!--SPACE-->
            <TableRow
                android:layout_height="20dp"
                android:layout_width="200dp">
                <View android:layout_width="match_parent"
                    android:layout_height="20dp"
                    />
            </TableRow>
            <!--END OF SPACE-->

            <!--HORIZONTAL LINE-->
            <TableRow
                android:layout_height="20dp"
                android:layout_width="200dp">
                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    style="@style/horizontal_line"
                    />
                <View android:layout_width="match_parent"
                    style="@style/horizontal_line"
                    android:layout_height="1dp" />
                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    style="@style/horizontal_line"/>
            </TableRow>
            <!--END OF HORIZONTAL LINE-->
            <!-- Row 1 with single column -->

            <TableRow
                style="@style/setup_table_rows"
                android:id="@+id/row_heading_report"
                android:layout_height="wrap_content"
                android:layout_width="100dp">
                <TextView
                    android:id="@+id/tv_id_report"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    style="@style/setup_full_style_left_fields"
                    android:text="ID"
                    />
                <TextView
                    android:id="@+id/tv_firstname_report"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    style="@style/setup_full_style_center_fields"
                    android:text="First Name"
                    />
                <TextView
                    android:id="@+id/tv_lastname_report"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    style="@style/setup_full_style_center_fields"
                    android:text="Last Name"
                    />
            </TableRow>
            <!--HORIZONTAL LINE-->
            <TableRow
                android:layout_height="20dp"
                android:layout_width="200dp">
                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    style="@style/horizontal_line"
                    android:id="@+id/horizontal_line"
                    />
                <View android:layout_width="match_parent"
                    style="@style/horizontal_line"
                    android:layout_height="1dp" />
                <View android:layout_width="match_parent"
                    android:layout_height="1dp"
                    style="@style/horizontal_line"/>
            </TableRow>
            <!--END OF HORIZONTAL LINE-->
            <TableRow
                style="@style/setup_table_rows"
                android:id="@+id/row_body_report"
                android:layout_height="wrap_content"
                android:layout_width="100dp">
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>